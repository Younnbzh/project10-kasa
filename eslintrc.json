{
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": ["react"],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "react/react-in-jsx-scope": "off",
      "prettier/prettier": ["error", {
        "singleQuote": true,
        "tabWidth": 2
      }]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }